datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Profile {
  id         Int     @id @default(autoincrement())
  perfilNome String
  user       User?
}

model User {
  id       Int     @id @default(autoincrement())
  nome     String
  email    String  @unique
  senha    String
  perfil   Profile @relation(fields: [perfilId], references: [id])
  perfilId Int     @unique
}